{
  "compilerOptions": {
    /* Base Settings */
    "target": "es2020",
    "module": "commonjs", // Use commonjs for standard Node.js projects with Express/Fastify
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,

    /* Strictness & Types */
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip checking declaration files for faster compilation
    "forceConsistentCasingInFileNames": true,

    /* Modules & Output */
    "moduleResolution": "node", // Standard way to resolve modules in Node.js
    "sourceMap": true,
  },
  "include": ["src/**/*"], // Only compile files inside the 'src' directory
  "exclude": ["node_modules"] // Ignore node_modules
}
